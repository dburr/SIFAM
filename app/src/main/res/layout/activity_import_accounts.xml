<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    android:orientation="vertical"
    tools:context="com.caraxian.sifam.ImportAccounts">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="
SIFAM 0.6.0 uses a new method of storing accounts\n
To use accounts from earlier versions of SIFAM they will need to be imported from here.\n\n
All accounts will be added to a folder relating to the current date and time.\n\n
No accounts will be deleted from the original SIFAM accounts location.\n
This is incase something goes wrong."
        android:layout_margin="5dp"
        android:layout_marginBottom="15dp"/>

    <Button
    android:tag="EN"
    android:text="Import EN"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="startImport"
    />
    <Button
        android:tag="JP"
        android:text="Import JP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startImport"
        />
    <Button
        android:tag="TW"
        android:text="Import TW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startImport"
        />
    <Button
        android:tag="KR"
        android:text="Import KR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startImport"
        />
    <Button
        android:tag="CN"
        android:text="Import CN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startImport"
        />


</LinearLayout>
